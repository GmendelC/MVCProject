@model IEnumerable<MVCProject.Models.DataBaseProject.Product>

@{
    ViewBag.Title = "UserProducts";
}

<h2>User Products</h2>

<p>
    @Html.ActionLink("Create New", "Add", "Product")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InCar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ByingId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InCar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ByingId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Add","Product", new { id=item.Id },null) |
            @Html.ActionLink("Details", "Index", "Product", new { id=item.Id }, null) |
            @Html.ActionLink("Delete", "Remove", "Product", new { id=item.Id }, null)
        </td>
    </tr>
}

</table>
